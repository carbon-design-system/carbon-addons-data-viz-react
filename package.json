{
  "name": "@ibmtm/carbon-addons-data-viz-react",
  "version": "1.0.0",
  "description": "Carbon Data Visualization for React",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "repository": "https://github.ibm.com/IBMTravelManager/carbon-addons-data-viz-react/tree/master",
  "author": "tw15egan <tw15egan@gmail.com>",
  "contributors": [
    {
      "name": "Liviu Dobrea",
      "email": "liviu.dobrea@ibm.com"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "carbon-components": "^9.1.8",
    "carbon-components-react": "^6.7.4",
    "carbon-icons": "^7.0.7",
    "classnames": "^2.2.5",
    "d3": "^5.5.0",
    "d3-format": "^1.3.0",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^3.2.0",
    "@commitlint/config-angular": "^3.1.1",
    "@storybook/addon-centered": "^3.1.2",
    "@storybook/addon-info": "^3.1.6",
    "@storybook/react": "^3.4.8",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "bluebird": "^3.5.0",
    "carbon-components": "^9.1.8",
    "carbon-components-react": "^6.7.4",
    "carbon-icons": "^7.0.7",
    "css-loader": "^0.28.4",
    "eslint": "^4.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "fs-extra": "^4.0.1",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "lint-staged": "^4.3.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.7.4",
    "prop-types": "^15.6.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "semantic-release": "^7.0.2",
    "storybook-addon-a11y": "^3.0.0",
    "style-loader": "^0.18.2"
  },
  "peerDependencies": {
    "carbon-components": "^9.1.8",
    "carbon-components-react": "^6.7.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "build": "node scripts/build.js",
    "lint": "eslint src",
    "prettier": "prettier --write \"**/*.{scss,css,js}\"",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": ""
  },
  "files": [
    "cjs/**/*",
    "es/**/*",
    "scss/**/*"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "rules": {
      "react/jsx-uses-vars": 1,
      "react/jsx-uses-react": 1,
      "react/no-find-dom-node": 1,
      "jsx-a11y/no-static-element-interactions": 1,
      "jsx-a11y/no-noninteractive-element-interactions": 1,
      "jsx-a11y/click-events-have-key-events": 1,
      "jsx-a11y/anchor-is-valid": 1,
      "jsx-a11y/interactive-supports-focus": 1,
      "jsx-a11y/label-has-for": [
        1,
        {
          "components": [
            "Label"
          ],
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          },
          "allowChildren": false
        }
      ]
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jest": true,
      "jasmine": true
    }
  },
  "babel": {
    "presets": [
      "./scripts/env",
      "react",
      "stage-1"
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "lint",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier",
      "git add"
    ]
  }
}
